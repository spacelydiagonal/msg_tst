doctype html
html
    head
        title= title
        meta(name="viewport",content="width=device-width, initial-scale=1")
        link(rel='stylesheet', href='http://cdn.bootcss.com/bootstrap/3.2.0/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/main.css')
        script(src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js")
        script(src="http://cdn.bootcss.com/bootstrap/3.2.0/js/bootstrap.min.js")

    body
        .container
            .row
                .col-sm-3
                .col-sm-6
                    .panel.panel-primary
                        .panel-heading
                            span.glyphicon.glyphicon-user &nbsp;
                            span SIGN UP
                        .panel-footer
                            form(action="/signup", id="signupForm" method="POST", data-parsley-validate)
                                input(type="hidden", id="theme", name="theme", value="flatly")
                                div(class="form-group")
                                    label(for="regname") Name
                                    input(type="text", class="form-control", id="regname", name="regname", placeholder="Your name")
                                div(class="form-group")
                                    label(for="email") Email address
                                    input(type="email", class="form-control", id="email", name="email", placeholder="Your email address")
                                div(class="form-group")
                                    label(for="password") Password
                                    input(type="password", class="form-control", id="password", name="password", placeholder="Your password")
                                div(class="form-group")
                                    label(for="passwordD") Password Confirm
                                    input(type="password", class="form-control", id="passwordD", name="passwordD", placeholder="Your confirm password")

                                div(class="modal-footer")
                                    label(style="float:left;") #{message}
                                    button(type="submit", id="signupFinish", onclick="checkPWD()" class="btn btn-primary") Sign Up!
                                    button(type="button" id="goLogin", class="btn btn-primary", onclick="history.go(-1)") Login

                .col-sm-3
